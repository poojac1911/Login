<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpage"
        android:layout_width="match_parent"
        android:layout_height="510dp" >
    </androidx.viewpager.widget.ViewPager>

    <Space
        android:id="@+id/spacer"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/viewpage"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@+id/spacer"
        android:orientation="vertical"
        android:layout_marginTop="30dp" >

        <TextView
            android:id="@+id/tv_onboardingScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="All in one fun"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_onboarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Post - Reel- Gravity- Forum- News- Al"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="50dp"
            android:text="Login" />
        <TextView
            android:id="@+id/textViewWithBorder"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:gravity="center"
            android:text="Create an account"
            android:background="@drawable/textview_outline"
            android:textColor="@android:color/black" />
    </LinearLayout>

</RelativeLayout>